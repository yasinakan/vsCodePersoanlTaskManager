{
    "name": "vscode-toolMaster",
    "displayName": "ToolMaster",
    "description": "A powerful task management and visualization tool for VS Code",
    "version": "0.0.3",
    "publisher": "YasinAkan",
    "repository": {
        "type": "git",
        "url": "https://github.com/yasinakan/vsCodePersoanlTaskManager"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:helloWorld.show",
        "onStartupFinished",
        "onLanguage:json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "helloWorld.show",
                "title": "Hello World"
            },
            {
                "command": "extension.runTerminalCommand",
                "title": "Run Terminal Command"
            },
            {
                "command": "taskManager.search",
                "title": "Search Tasks",
                "icon": "$(search)"
            },
            {
                "command": "taskManager.refresh",
                "title": "Refresh Tasks",
                "icon": "$(refresh)"
            },
            {
                "command": "taskManager.viewTask",
                "title": "View Task"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tool Master",
            "properties": {
                "Tasks.json": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Paths to task definition files."
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "Tasks",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The name of the task"
                    }
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "taskManagerView",
                    "name": "Tool Master",
                    "icon": "$(tasklist)"
                }
            ]
              
        },
        "menus": {
            "view/title": [
                {
                    "command": "taskManager.search",
                    "when": "view == taskManagerView",
                    "group": "navigation"
                },
                {
                    "command": "taskManager.refresh",
                    "when": "view == taskManagerView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "taskManager.runTaskFromMenu",
                    "when": "view == taskManagerView && viewItem == task",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^16.18.0",
        "@types/vscode": "^1.50.0",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.54.0",
        "typescript": "^4.9.5"
    },
    "resolutions": {
        "semver": "^7.5.4",
        "jsdom": "^21.1.2",
        "tough-cookie": "^4.1.3",
        "word-wrap": "^1.2.4"
    },
    "dependencies": {
        "mkdirp": "^3.0.1"
    }
}
