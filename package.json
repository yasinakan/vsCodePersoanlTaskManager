{
    "name": "personal-task-manager",
    "displayName": "Personal Task Manager",
    "description": "A personal task manager extension for VS Code",
    "version": "0.0.1",
    "publisher": "your-publisher-name",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-repo-url"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:helloWorld.show",
        "onStartupFinished",
        "onLanguage:json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "helloWorld.show",
                "title": "Hello World"
            },
            {
                "command": "extension.runTerminalCommand",
                "title": "Run Terminal Command"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Personal Task Manager",
            "properties": {
                "myTask.json": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Paths to task definition files."
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "myTask2",
                "required": ["task"],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The name of the task"
                    }
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "taskManagerView",
                    "name": "Task Manager"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^4.0.3",
        "vscode": "^1.1.37",
        "tslint": "^6.1.3",
        "eslint": "^7.10.0",
        "@types/node": "^14.14.6",
        "@types/vscode": "^1.50.0"
    }
}