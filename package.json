{
	"name": "personal-task-manager",
	"displayName": "Personal Task Manager",
	"description": "A personal task manager extension",
	"version": "0.0.1",
	"publisher": "your-publisher-name",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-repo-url"
	},
	"bugs": {
		"url": "https://github.com/your-repo-url/issues"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:helloWorld.show"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "helloWorld.show",
				"title": "Hello World"
			},
			{
				"command": "printTheTaskJson.show",
				"title": "Print the Task JSON"
			}
		],
		"configuration": {
			"title": "Personal Task Manager",
			"properties": {
				"myTask.json": {
					"type": "string",
					"default": "D:/Dev/vsCodePersoanlTaskManager/tasks112.json",
					"description": "Path to the JSON file containing tasks"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	}
}
